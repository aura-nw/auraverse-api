{
  "name": "auraverse-api",
  "version": "1.0.0",
  "description": "Auraverse is an independent central hub and place to discover everything in the Aura Network Blockchain ecosystem (NFTs, projects, DeFi, DAOs etc).",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config moleculer.config.ts services/**/*.service.ts",
    "start": "ts-node -r tsconfig-paths/register ./node_modules/moleculer/bin/moleculer-runner.js --config moleculer.config.ts",
    "cli": "moleculer connect Redis",
    "ci": "jest --watch",
    "test": "jest --coverage --runInBand --forceExit",
    "lint": "eslint --ext .js,.ts .",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down",
    "migrate:generate": "knex migrate:make -x ts ",
    "migrate:run": "knex migrate:latest",
    "migrate:revert": "knex migrate:down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@cosmjs/cosmwasm-stargate": "^0.29.5",
    "@cosmjs/proto-signing": "^0.29.5",
    "@cosmjs/stargate": "^0.29.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.191",
    "@types/pako": "^2.0.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-stats": "^0.95.6",
    "@types/swagger-ui-dist": "^3.30.1",
    "dayjs": "^1.11.7",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "helmet": "^6.0.1",
    "jest": "^25.1.0",
    "jest-cli": "^25.1.0",
    "moleculer-repl": "^0.6.2",
    "mysql2": "^2.3.3",
    "pako": "^2.1.0",
    "prettier": "^2.8.1",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@types/jest": "^25.1.4",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^13.9.8",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.10.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-plugin-prettier": "^4.2.1",
    "generate-password": "^1.7.0",
    "ioredis": "^4.14.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.3.0",
    "lodash": "^4.17.21",
    "moleculer": "^0.14.0",
    "moleculer-auto-openapi": "^1.1.5",
    "moleculer-bull": "^0.3.1",
    "moleculer-db": "^0.8.20",
    "moleculer-web": "^0.9.0",
    "nodemailer": "^6.8.0",
    "objection": "^3.0.1",
    "resilient": "^0.4.0",
    "swagger-jsdoc": "^6.2.5",
    "swagger-stats": "^0.99.2",
    "swagger-ui-dist": "^4.15.5"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
