{
	"compilerOptions": {
		"skipLibCheck": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"pretty": true,
		"target": "es2018",
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": ".",
	},
	"include": [
		"./**/*"
	],
	"exclude": [
		"node_modules/**/*",
		"test"
	]
}